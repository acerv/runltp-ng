{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(message)s"
        }
    },
    "handlers": {
        "info_handler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple"
        }
    },
    "loggers": {
        "ltp.main": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.runner.serial": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.runner.shell": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.dispatcher.serial": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.downloader.local": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.downloader.transport": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.installer": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.backend.qemu": {
            "handlers": [
                "info_handler"
            ]
        }
    }
}