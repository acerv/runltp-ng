{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(message)s"
        },
        "debug": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "info_handler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple"
        },
        "debug_file_handler": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "debug",
            "filename": "debug.log",
            "encoding": "utf8"
        }
    },
    "loggers": {
        "ltp.main": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.runner.serial": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.runner.shell": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.dispatcher.serial": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.downloader.local": {
            "handlers": [
                "info_handler"
            ]
        },
        "ltp.installer": {
            "handlers": [
                "info_handler"
            ]
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "debug_file_handler"
        ]
    }
}